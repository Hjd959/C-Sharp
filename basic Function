using System;

namespace test
{
    class MainClass
    {

        // n اول شي القيمه الذي تعيدها
        //  n اذا كانت لا تعيد قيمه void
        // n ثم اسم الفنكشن
        // n ثم البارميتر الذي تستخدمه


            public static void drawStart()
        {
            for (int i =0; i< 5; i++)
            {
                for(int j = i; j<5; j++)
                {
                    Console.Write("");
                }
                Console.Write("*\n");
            }
        }



        public static int sum(int x , int y)
        {
            return (x + y);
        }


        public static void Main(string[] args)
        {
            drawStart();
            drawStart();
            drawStart();

            
            Console.Write(sum(10,16));
        }

    }
}
