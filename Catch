

//يطبع لك الخطاء والبرنامج قيد التشغيل
    


using System;

namespace test
{
    class MainClass
    {


        public static void Main(string[] args)
        {
            string Message = "before";


            try
            {
                Console.Write("enter number: ");
                int x = Convert.ToInt32(Console.ReadLine());
                Console.Write("Thans you enerded" + x);

                Message = "try";


            }
            catch (Exception ex)
            {
                Console.Write("\nError" + ex);

                Message = "catch";
            }

            Console.Write("\nMessage " + Message);
        }

    }
}

