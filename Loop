using System;

namespace test
{
    class MainClass
    {

        public static void Main(string[] args)
        {


            Console.WriteLine("Welcome To Loop");

            // n ١-تعريف متغير ٢-ماهو شرط التوقف ٣-مقدار الزياده
            // first (creat type) Second (what is requirement to stop) Thired (The amount of increase)


            for (int i = 0; i <5; i++)
            {
                Console.WriteLine("Hello");
            }


            for(int x = 0; x <= 5; x++)
            {
                Console.WriteLine(x);
            }


        }

    }
}
